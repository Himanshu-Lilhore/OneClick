{
    "manifest_version": 3,
    "name": "OneClick",
    "version": "3.0",
    "description": "Manual testing helper",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scriptIntrusive.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["popup.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  